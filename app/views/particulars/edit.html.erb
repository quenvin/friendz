<% provide(:title, "Additional Particulars") %>
<h1>Place your additional particulars here!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@particular, url: particular_path(@particular)) do |f| %>
    
      

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :age %>
      <%= f.text_field :age, class: 'form-control' %>

      <%= f.label :gender %>
      <%= f.text_field :gender, class: 'form-control' %>

    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: 'form-control' %>
    

     

      

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    
</div>
